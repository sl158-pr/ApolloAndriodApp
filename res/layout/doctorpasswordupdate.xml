<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget41"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_img" >

    <RelativeLayout
        android:id="@+id/loginlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logolayout"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_panel" >

        <TextView
            android:id="@+id/query1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Choose your Alphabet one "
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/txt_ans1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/query1"
            android:layout_marginRight="5dp"
            android:background="@drawable/form_field"
            android:cursorVisible="true"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/query2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_ans1"
            android:layout_marginTop="20dp"
            android:text="Choose your Alphabet two "
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/txt_ans2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/query2"
            android:layout_marginRight="5dp"
            android:background="@drawable/form_field"
            android:cursorVisible="true"
            android:textColor="#000000" />

        <Button
            android:id="@+id/submitbutton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txt_ans2"
            android:layout_marginTop="40dp"
            android:background="@drawable/red_btn_off"
            android:text="      Submit     " />
    </RelativeLayout>

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dip"
        android:text=""
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" >
    </TextView>

    <TextView
        android:id="@+id/newpwd_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/loginlayout"
        android:layout_marginTop="10dp"
        android:text=" New Password:      "
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/confirm_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newpwd_ip"
        android:layout_marginTop="24dp"
        android:text="Confirm Password:"
         android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/loginlayout"
        android:layout_below="@+id/result"
        android:layout_marginRight="21dp"
        android:background="@drawable/back_button" />

    <EditText
        android:id="@+id/txt_newpwd"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/newpwd_ip"
        android:layout_marginLeft="28dp"
        android:layout_toLeftOf="@+id/cancel_button"
        android:layout_toRightOf="@+id/newpwd_ip"
        android:background="@drawable/form_field"
        android:ems="10" />

    <EditText
        android:id="@+id/txt_confirm"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/confirm_ip"
        android:layout_alignBottom="@+id/confirm_ip"
        android:layout_alignLeft="@+id/txt_newpwd"
        android:layout_alignRight="@+id/txt_newpwd"
        android:background="@drawable/form_field"
        android:layout_marginTop="4dp"
        android:cursorVisible="true"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cancel_button"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/result"
        android:text="OK" />

</RelativeLayout>
